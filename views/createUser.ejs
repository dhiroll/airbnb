    <div class="container">
        <form action='/register' method="post">
            <div class="blocTitle">
                <h3>Votre inscription</h3>
                <div class="blocForm">
                    <div class="form-group">
                        <label for="user_email">Email address</label>
                        <input type="email" name="user_email" class="form-control" placeholder="Entrez votre email">     
                    </div>
                    <div class="form-group">
                        <label for="username">User name</label>
                        <input text="text" name="username" class="form-control" placeholder="Entrez un pseudo">     
                    </div>
